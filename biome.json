{
	"$schema": "https://biomejs.dev/schemas/2.4.0/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 100
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noForEach": "off"
			},
			"suspicious": {
				"noThenProperty": "off",
				"noTemplateCurlyInString": "off"
			},
			"style": {
				"noNonNullAssertion": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist", "!**/*.json", "!**/docs-site/.astro"]
	}
}
